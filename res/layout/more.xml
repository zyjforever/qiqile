<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_common"
    android:orientation="vertical" >

    <!-- 顶部条 -->

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="47dp"
        android:background="@drawable/bg_header"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/title"
            style="@style/header_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/more_header" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="fill_parent"
                android:layout_height="101.0dip"
                android:layout_margin="13.0dip"
                android:background="@drawable/panel_bg" >

                <RelativeLayout
                    android:id="@+id/modify_password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/modify_password_image"
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15.0dip"
                        android:background="#fff"
                        android:src="@drawable/detail_locked" />

                    <TextView
                        android:id="@+id/modify_password_button"
                        style="@style/hint_textView"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/textView1"
                        android:layout_toRightOf="@+id/modify_password_image"
                        android:text="@string/omenu_modify_password" />

                    <TextView
                        style="@style/arrow"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>

                <View
                    android:id="@+id/view_1"
                    style="@style/hr"
                    android:layout_below="@+id/start_time_edit" >
                </View>

                <RelativeLayout
                    android:id="@+id/preferences"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_1" >

                    <ImageView
                        android:id="@+id/preferences_image"
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="13.0dip"
                        android:background="#fff"
                        android:src="@android:drawable/ic_menu_manage" />

                    <TextView
                        android:id="@+id/preferences_button"
                        style="@style/hint_textView"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/preferences_image"
                        android:text="@string/omenu_preferences" />

                    <TextView
                        style="@style/arrow"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="fill_parent"
                android:layout_height="152.0dip"
                android:layout_below="@+id/relativeLayout1"
                android:layout_margin="13.0dip"
                android:background="@drawable/panel_bg" >

                <RelativeLayout
                    android:id="@+id/feedback"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/feedback_image"
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15.0dip"
                        android:background="#fff"
                        android:src="@drawable/detail_forward_selected" />

                    <TextView
                        android:id="@+id/feedback_button"
                        style="@style/hint_textView"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/feedback_image"
                        android:text="@string/omenu_feedback" />

                    <TextView
                        style="@style/arrow"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>

                <View
                    android:id="@+id/view_2"
                    style="@style/hr"
                    android:layout_below="@+id/feedback" >
                </View>

                <RelativeLayout
                    android:id="@+id/about"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_2" >

                    <ImageView
                        android:id="@+id/about_image"
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15.0dip"
                        android:background="#fff"
                        android:src="@android:drawable/ic_menu_info_details" />

                    <TextView
                        android:id="@+id/about_button"
                        style="@style/hint_textView"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/about_image"
                        android:text="@string/omenu_about" />

                    <TextView
                        style="@style/arrow"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>

                <View
                    android:id="@+id/view_3"
                    style="@style/hr"
                    android:layout_below="@+id/about" >
                </View>

                <RelativeLayout
                    android:id="@+id/help"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_3" >

                    <ImageView
                        android:id="@+id/help_image"
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15.0dip"
                        android:background="#fff"
                        android:src="@android:drawable/ic_menu_help" />

                    <TextView
                        android:id="@+id/help_button"
                        style="@style/hint_textView"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/help_image"
                        android:text="@string/omenu_help" />

                    <TextView
                        style="@style/arrow"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="fill_parent"
                android:layout_height="101.0dip"
                android:layout_below="@+id/relativeLayout2"
                android:layout_margin="15.0dip"
                android:background="@drawable/panel_bg" >

                <RelativeLayout
                    android:id="@+id/signout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/signout_image"
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15.0dip"
                        android:background="#fff"
                        android:src="@android:drawable/ic_menu_set_as" />

                    <TextView
                        android:id="@+id/signout_button"
                        style="@style/hint_textView"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/signout_image"
                        android:text="@string/omenu_signout" />

                    <TextView
                        style="@style/arrow"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>

                <View
                    android:id="@+id/view_4"
                    style="@style/hr"
                    android:layout_below="@+id/signout" >
                </View>

                <RelativeLayout
                    android:id="@+id/exit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_4" >

                    <ImageView
                        android:id="@+id/exit_image"
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15.0dip"
                        android:background="#fff"
                        android:src="@android:drawable/ic_lock_power_off" />

                    <TextView
                        android:id="@+id/exit_button"
                        style="@style/hint_textView"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/exit_image"
                        android:text="@string/omenu_exit" />

                    <TextView
                        style="@style/arrow"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>